@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = "PO";
    PageLayout.Content.MenuItemName = "PO.PurchaseRequests";
}

@section styles {
     <abp-style src="/Pages/POs/PurchaseRequests/index.css" />
}
@section scripts {
    <abp-script src="/Pages/POs/PurchaseRequests/index.js" />
}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">PO</a></li>
        <li class="breadcrumb-item active">Purchase Requests</li>
    </ol>
}


