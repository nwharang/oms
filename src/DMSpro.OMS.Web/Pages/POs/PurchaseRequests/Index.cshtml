@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = "PO";
    PageLayout.Content.MenuItemName = "PO.PurchaseRequests";
}

@section styles {
    <style>
        #txtBarCode{
            display: inline-block;
            vertical-align: bottom;
        }

            #txtBarCode .dx-placeholder::before {
            padding: 5px 9px 8px;
        }
    </style>
}
@section scripts {
    <abp-script src="/Pages/POs/PurchaseRequests/index.js" />
}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">PO</a></li>
        <li class="breadcrumb-item active">Purchase Requests</li>
    </ol>
}


<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fa fa-file-alt"></i>
            </h2>
        </div>
        <div class="panel-container show">
            <div class="panel-content jqvmap-bg-ocean p-0" style="height: 330px;">
                <abp-card>
                    <abp-card-body>
                        <abp-row>
                            <div style="padding-left:12px" class="buttons-header-grid">
                                <div class="btn-group">
                                    <button id="btnActions" type="button" class="btn btn-light btn-sm dropdown-toggle"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="dx-icon dx-icon-preferences"></i>
                                        <span class="dx-button-text">Action</span>
                                    </button>
                                    <div class="dropdown-menu fadeindown">
                                        <button class="dropdown-item" type="button">Save</button>
                                        <button class="dropdown-item" type="button">Confirm</button>
                                        <button class="dropdown-item" type="button">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </abp-row>
                        <div class="dx-viewport">
                            <div class="py-3">
                                @*<div class="dx-fieldset-header">Purchase Requests</div>*@
                                <div id="form"></div>
                            </div>
                            <div class="border-top py-2">
                                @*<div class="dx-fieldset-header">Detail</div>*@

                                <div id="MDMtabpanel">
                                    <div id="tabpanel-container"> </div>
                                    <div class="options">
                                        <div class="option">
                                            <div id="animation-enabled"></div>
                                        </div>
                                        <div class="option">
                                            <div id="animation-enabled"></div>
                                        </div>

                                    </div>
                                </div>
                                <script id="details1" type="text/html">
                                     <div class="d-flex justify-content-between">
                                        <div>
                                            <button type="button" class="btn btn-sm btn-outline-default" name="btnAddRow" data-target="gridDetails"><i class="dx-icon dx-icon-plus"></i>
                                                <span class="dx-button-text">Add Row</span>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-default"><i class="dx-icon dx-icon-remove"></i>
                                                <span class="dx-button-text">Delete Row</span>
                                            </button>
                                          <div id="txtBarCode" ></div>
                                            
                                        </div>
                                        <div> 
                                            <button type="button" class="btn btn-sm btn-outline-default waves-effect waves-themed">
                                                <i class="fa fa-upload"></i> <span>Import From Excel</span>
                                            </button>
                                        </div>
                                    </div>
                                    <div id="gridDetails"></div>
                                </script>
                                <script id="details2" type="text/html">
                                    <div id="dataGridContainer2"></div>
                                </script>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>
        </div>
    </div>
</div>

