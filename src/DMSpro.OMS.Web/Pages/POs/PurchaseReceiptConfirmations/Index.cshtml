@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = "PO";
    PageLayout.Content.MenuItemName = "PO.PurchaseReceiptConfirmations";
}

@section scripts {
    <abp-script src="/Pages/POs/PurchaseReceiptConfirmations/index.js" />
}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">PO</a></li>
        <li class="breadcrumb-item active">Purchase Receipt Confirmation</li>
    </ol>
}


<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fa fa-file-alt"></i> Purchase Receipt Confirmation
            </h2>
        </div>
        <div class="panel-container show">
            <div class="panel-content jqvmap-bg-ocean p-0" style="height: 330px;">
                <abp-card>
                    <abp-card-body>
                        <abp-row>
                            <div style="padding-left:12px" class="buttons-header-grid">
                                @*@if (await Authorization.IsGrantedAsync(MdmServicePermissions.EmployeeMasters.Create))
                                {
                                <abp-button id="NewEmployeeMasterButton" text="@L["NewEmployeeMaster"].Value" icon="plus" size="Small" button-type="Success" />
                                }*@
                                <div class="btn-group">
                                    <button type="button" class="btn btn-light btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Action
                                    </button>
                                    <div class="dropdown-menu fadeindown">
                                        <button class="dropdown-item" type="button">Save</button>
                                        <button class="dropdown-item" type="button">Confirm</button>
                                        <button class="dropdown-item" type="button">Cancel</button>
                                    </div>
                                   
                                </div>
                                 <button type="button" class="btn btn-sm btn-outline-default">View transaction</button>

                                <div class="dx-datagrid-search-panel dx-show-invalid-badge dx-textbox dx-texteditor dx-editor-outlined dx-searchbox dx-show-clear-button dx-texteditor-empty dx-widget dx-state-hover" style="width: 250px;">
                                    <div class="dx-texteditor-container">
                                        <div class="dx-texteditor-input-container">
                                            <div class="dx-icon dx-icon-search"></div>
                                            <input autocomplete="off" aria-label="Search in the data grid" class="dx-texteditor-input" type="text" spellcheck="false" tabindex="0" role="textbox">
                                        </div>
                                        <div class="dx-texteditor-buttons-container">
                                            <span class="dx-clear-button-area"><span class="dx-icon dx-icon-clear"></span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </abp-row>
                        <div class="dx-viewport">
                            <div class="py-3">
                                @*<div class="dx-fieldset-header">Purchase Receipt Confirmation</div>*@
                                <div id="form"></div>
                            </div>
                            <div class="border-top py-2">
                                <div class="dx-fieldset-header">Detail</div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <button type="button" class="btn btn-sm btn-outline-default">Add Row</button>
                                        <button type="button" class="btn btn-sm btn-outline-default">Delete Row</button>
                                       @* <button type="button" class="btn btn-sm btn-outline-default">Allocation</button>
                                        <button type="button" class="btn btn-sm btn-outline-default">Scan Imei</button>*@
                                    </div>
                                    <div>
                                        <button id="ExportToExcelButton" type="button" class="btn btn-sm btn-outline-default waves-effect waves-themed">
                                            <i class="fa fa-download"></i> <span>Export From Excel</span>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-default waves-effect waves-themed">
                                            <i class="fa fa-upload"></i> <span>Import From Excel</span>
                                        </button>
                                    </div>
                                </div>
                                <div id="dataGridContainer"></div>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>
        </div>
    </div>
</div>

