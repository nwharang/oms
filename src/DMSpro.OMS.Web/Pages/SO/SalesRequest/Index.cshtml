@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = "SO";
    PageLayout.Content.MenuItemName = "SO.SalesRequest";
}

@section styles {
    <abp-style src="/Pages/POs/PurchaseOrders/index.css" />
}
@section scripts {
    <script src="/js/devextreme/exceljs.min.js"></script>
    <script src="/js/devextreme/filesaver.min.js"></script>
    <abp-script src="/Pages/SO/SalesRequest/index.js" />

}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">SO</a></li>
        <li class="breadcrumb-item active">Sales Request</li>
    </ol>
}

<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fa fa-file-alt"></i>
            </h2>
        </div>
        <div class="panel-container show">
            <div class="panel-content jqvmap-bg-ocean p-0" style="">
                <div class="dx-viewport">
                    <div class="py-2">
                        <div id="gridPurchaseOrders"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


