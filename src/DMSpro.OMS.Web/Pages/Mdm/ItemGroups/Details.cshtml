@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using DMSpro.OMS.MdmService.Permissions
@using DMSpro.OMS.MdmService.Web.Pages.ItemGroups
@using DMSpro.OMS.MdmService.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@inject IHtmlLocalizer<MdmServiceResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Item Group Detail"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.ItemGroups;
}

@section styles {
    <abp-style src="/Pages/Mdm/ItemGroups/details.css" />
}

@section scripts
{
    <abp-script src="/Pages/Mdm/ItemGroups/details.js" />
}

@section breadcrumb
    {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">@L["Menu:MdmService:MdmService"].Value</a></li>
        <li class="breadcrumb-item">@L["Item"].Value</li>
        <li class="breadcrumb-item active">Item Group Detail</li>
    </ol>
}

<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fal fal fa-window"></i>
            </h2>
        </div>
        <div class="panel-container show">
            <div class="panel-content jqvmap-bg-ocean p-0" style="height: 330px;">
                <abp-card>
                    <abp-card-body>
                        <abp-row>
                            <div style="padding-left:12px" class="buttons-header-grid">
                                <div class="btn-group">
                                    <button id="btnActions" type="button" class="btn btn-light btn-sm dropdown-toggle hvr-icon-pop"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-gear hvr-icon"></i>
                                        <span class="">Action</span>
                                    </button>
                                    <div class="dropdown-menu fadeindown">
                                        <button id="btnSave" onclick="action(this)" data-type="save" class="dropdown-item" type="button">Save</button>
                                        <button id="btnReleased" onclick="action(this)" data-type="released" class="dropdown-item" type="button">@L["EntityFieldValue:MDMService:ItemGroup:Status:RELEASED"]</button>
                                        <button id="btnCancelled" onclick="action(this)" data-type="cancelled" class="dropdown-item" type="button">@L["EntityFieldValue:MDMService:ItemGroup:Status:CANCELLED"]</button>
                                    </div>
                                </div>
                            </div>
                        </abp-row>
                        <div class="dx-viewport">
                            <div class="py-1" id="resizable">
                                <div id="top-section"></div>
                            </div>
                            <div class="py-2">
                                <div id="itemGroupTabpanel">
                                    <div id="tabpanel-container"> </div>
                                    <div class="options">
                                        <div class="option">
                                            <div id="animation-enabled"></div>
                                        </div>
                                        <div class="option">
                                            <div id="animation-enabled"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>
        </div>
    </div>
</div>