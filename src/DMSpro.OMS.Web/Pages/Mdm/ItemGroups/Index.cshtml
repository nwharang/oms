@using DMSpro.OMS.MdmService.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@inject IHtmlLocalizer<MdmServiceResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["ItemGroups"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.ItemGroups;
}

@section scripts
{
    <abp-script src="/Pages/Mdm/ItemGroups/index.js" />
}

