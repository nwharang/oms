@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.ItemGroups
@using DMSpro.OMS.MdmService.ItemGroups;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/ItemGroups/CreateModal" autocomplete="off">
    <abp-modal id="ItemGroupCreateModal">
        <abp-modal-header title="@L["NewItemGroup"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="ItemGroup.Code" />

            <abp-input asp-for="ItemGroup.Name" />

            <abp-input asp-for="ItemGroup.Description" />

            <abp-select asp-for="ItemGroup.Type" />

            <abp-select asp-for="ItemGroup.Status" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
