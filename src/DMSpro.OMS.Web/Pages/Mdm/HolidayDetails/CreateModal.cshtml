@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.HolidayDetails
@using DMSpro.OMS.MdmService.HolidayDetails;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/HolidayDetails/CreateModal" autocomplete="off">
    <abp-modal id="HolidayDetailCreateModal">
        <abp-modal-header title="@L["NewHolidayDetail"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="HolidayDetail.StartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="HolidayDetail.EndDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="HolidayDetail.Description" text-area/>

                                <abp-select asp-for="HolidayDetail.HolidayId" asp-items="Model.HolidayLookupListRequired" label="@L["Holiday"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>