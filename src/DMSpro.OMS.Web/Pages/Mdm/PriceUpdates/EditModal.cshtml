@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.PriceUpdates
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.PriceUpdates;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/PriceUpdates/EditModal" autocomplete="off">
    <abp-modal id="PriceUpdateEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="PriceUpdate.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="PriceUpdate.Code" />

            <abp-input asp-for="PriceUpdate.Description" />

            <abp-input asp-for="PriceUpdate.EffectiveDate" value="@(Model.PriceUpdate.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-select asp-for="PriceUpdate.Status" />

            <abp-input asp-for="PriceUpdate.UpdateStatusDate" value="@(Model.PriceUpdate.UpdateStatusDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="PriceUpdate.PriceListId" asp-items="Model.PriceListLookupListRequired" label="@L["PriceList"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
