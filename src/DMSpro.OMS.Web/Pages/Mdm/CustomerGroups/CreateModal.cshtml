@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.CustomerGroups
@using DMSpro.OMS.MdmService.CustomerGroups;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerGroups/CreateModal" autocomplete="off">
    <abp-modal id="CustomerGroupCreateModal">
        <abp-modal-header title="@L["NewCustomerGroup"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="CustomerGroup.Code" />

            <abp-input asp-for="CustomerGroup.Name" />

            <abp-input asp-for="CustomerGroup.Active" />

            <abp-input asp-for="CustomerGroup.EffectiveDate" value="" type="date"/>

            <abp-select asp-for="CustomerGroup.GroupBy" />

            <abp-select asp-for="CustomerGroup.Status" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>