@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Vendors"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.Vendors;
}

@section scripts
{
    <abp-script src="/Pages/Mdm/Vendors/index.js" />
}

