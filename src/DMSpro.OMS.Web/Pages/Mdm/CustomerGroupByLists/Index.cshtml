@using DMSpro.OMS.MdmService.Localization
@inject IHtmlLocalizer<MdmServiceResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["CustomerGroupByLists"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.CustomerGroupByLists;
}

@section scripts
{
    <abp-script src="/Pages/Mdm/CustomerGroupByLists/index.js" />
}

