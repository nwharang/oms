@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using DMSpro.OMS.MdmService.Permissions
@using DMSpro.OMS.MdmService.Web.Pages.ItemMasters
@using DMSpro.OMS.MdmService.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@inject IHtmlLocalizer<MdmServiceResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Page.Title.Items"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.Items;
}

@section scripts
    {
    <script src="/js/devextreme/exceljs.min.js"></script>
    <script src="/js/devextreme/filesaver.min.js"></script>
    <abp-script src="/Pages/Mdm/ItemMasters/index.js" />
}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">@L["Menu:MdmService:MdmService"].Value</a></li>
        <li class="breadcrumb-item">@L["Menu:MdmService:GroupMenu:Item"].Value</li>
        <li class="breadcrumb-item active">@L["Menu:MdmService:Items"].Value</li>
    </ol>
}

<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fal fal fa-window"></i>
            </h2>
        </div>
        <div class="panel-container show" style="padding: 10px">
            <div class="panel-content jqvmap-bg-ocean p-0" style="height: 330px;">
                <div class="dx-viewport" style="overflow: auto">
                    <div id="dataGridItemMasters"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dx-tabpanel-container {
        padding-bottom: 20px !important;
    }
</style>