@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.CustomerInZones
@using DMSpro.OMS.MdmService.CustomerInZones;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerInZones/CreateModal" autocomplete="off">
    <abp-modal id="CustomerInZoneCreateModal">
        <abp-modal-header title="@L["NewCustomerInZone"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="CustomerInZone.EffectiveDate" value="" type="date"/>

            <abp-input asp-for="CustomerInZone.EndDate" value="" type="date"/>

                                <abp-select asp-for="CustomerInZone.SalesOrgHierarchyId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["SalesOrgHierarchy"].Value"/>            <abp-select asp-for="CustomerInZone.CustomerId" asp-items="Model.CustomerLookupListRequired" label="@L["Customer"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>