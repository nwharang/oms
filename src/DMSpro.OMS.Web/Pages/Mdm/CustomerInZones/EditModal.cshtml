@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.CustomerInZones
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.CustomerInZones;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerInZones/EditModal" autocomplete="off">
    <abp-modal id="CustomerInZoneEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="CustomerInZone.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="CustomerInZone.EffectiveDate" value="@(Model.CustomerInZone.EffectiveDate?.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="CustomerInZone.EndDate" value="@(Model.CustomerInZone.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="CustomerInZone.SalesOrgHierarchyId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["SalesOrgHierarchy"].Value"/>            <abp-select asp-for="CustomerInZone.CustomerId" asp-items="Model.CustomerLookupListRequired" label="@L["Customer"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>