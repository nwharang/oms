@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.EmployeeProfiles
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.EmployeeProfiles;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/EmployeeProfiles/EditModal" autocomplete="off">
    <abp-modal id="EmployeeProfileEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="EmployeeProfile.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="EmployeeProfile.Code" />

            <abp-input asp-for="EmployeeProfile.ERPCode" />

            <abp-input asp-for="EmployeeProfile.FirstName" />

            <abp-input asp-for="EmployeeProfile.LastName" />

            <abp-input asp-for="EmployeeProfile.DateOfBirth" value="@(Model.EmployeeProfile.DateOfBirth?.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="EmployeeProfile.IdCardNumber" />

            <abp-input asp-for="EmployeeProfile.Email" />

            <abp-input asp-for="EmployeeProfile.Phone" />

            <abp-input asp-for="EmployeeProfile.Address" />

            <abp-input asp-for="EmployeeProfile.Active" />

            <abp-input asp-for="EmployeeProfile.EffectiveDate" value="@(Model.EmployeeProfile.EffectiveDate?.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="EmployeeProfile.EndDate" value="@(Model.EmployeeProfile.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="EmployeeProfile.IdentityUserId" />

                                <abp-select asp-for="EmployeeProfile.WorkingPositionId" asp-items="Model.WorkingPositionLookupList" label="@L["WorkingPosition"].Value"/>            <abp-select asp-for="EmployeeProfile.EmployeeTypeId" asp-items="Model.SystemDataLookupList" label="@L["EmployeeType"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>