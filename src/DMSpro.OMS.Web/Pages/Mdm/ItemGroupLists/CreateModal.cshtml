@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.ItemGroupLists
@using DMSpro.OMS.MdmService.ItemGroupLists;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/ItemGroupLists/CreateModal" autocomplete="off">
    <abp-modal id="ItemGroupListCreateModal">
        <abp-modal-header title="@L["NewItemGroupList"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="ItemGroupList.Rate" />

                                <abp-select asp-for="ItemGroupList.ItemGroupId" asp-items="Model.ItemGroupLookupListRequired" label="@L["ItemGroup"].Value"/>            <abp-select asp-for="ItemGroupList.ItemId" asp-items="Model.ItemMasterLookupListRequired" label="@L["Item"].Value"/>            <abp-select asp-for="ItemGroupList.UOMId" asp-items="Model.UOMLookupListRequired" label="@L["UOM"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
