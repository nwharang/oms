<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="RateFilterMin" label="@L["MinRate"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="RateFilterMax" label="@L["MaxRate"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="ItemGroupIdFilter" label="@L["ItemGroup"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="ItemIdFilter" label="@L["Item"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="UOMIdFilter" label="@L["UOM"].Value" />
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="ItemGroupListsTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["Rate"]</th>
					<th>@L["ItemGroup"]</th>
					<th>@L["Item"]</th>
					<th>@L["UOM"]</th>
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>
