@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.EmployeeInZones
@using DMSpro.OMS.MdmService.EmployeeInZones;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/EmployeeInZones/CreateModal" autocomplete="off">
    <abp-modal id="EmployeeInZoneCreateModal">
        <abp-modal-header title="@L["NewEmployeeInZone"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="EmployeeInZone.EffectiveDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="EmployeeInZone.EndDate" />

                                <abp-select asp-for="EmployeeInZone.SalesOrgHierarchyId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["SalesOrgHierarchy"].Value"/>            <abp-select asp-for="EmployeeInZone.EmployeeId" asp-items="Model.EmployeeProfileLookupListRequired" label="@L["Employee"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>