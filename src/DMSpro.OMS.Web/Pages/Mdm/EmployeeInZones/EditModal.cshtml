@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.EmployeeInZones
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.EmployeeInZones;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/EmployeeInZones/EditModal" autocomplete="off">
    <abp-modal id="EmployeeInZoneEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="EmployeeInZone.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="EmployeeInZone.EffectiveDate" value="@(Model.EmployeeInZone.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="EmployeeInZone.EndDate" />

                                <abp-select asp-for="EmployeeInZone.SalesOrgHierarchyId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["SalesOrgHierarchy"].Value"/>            <abp-select asp-for="EmployeeInZone.EmployeeId" asp-items="Model.EmployeeProfileLookupListRequired" label="@L["Employee"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>