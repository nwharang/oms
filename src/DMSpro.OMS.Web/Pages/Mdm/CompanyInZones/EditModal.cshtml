@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.CompanyInZones
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.CompanyInZones;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CompanyInZones/EditModal" autocomplete="off">
    <abp-modal id="CompanyInZoneEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="CompanyInZone.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="CompanyInZone.EffectiveDate" value="@(Model.CompanyInZone.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="CompanyInZone.EndDate" value="@(Model.CompanyInZone.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="CompanyInZone.SalesOrgHierarchyId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["SalesOrgHierarchy"].Value"/>            <abp-select asp-for="CompanyInZone.CompanyId" asp-items="Model.CompanyLookupListRequired" label="@L["Company"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>