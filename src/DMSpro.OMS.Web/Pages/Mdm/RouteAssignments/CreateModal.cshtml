@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.RouteAssignments
@using DMSpro.OMS.MdmService.RouteAssignments;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/RouteAssignments/CreateModal" autocomplete="off">
    <abp-modal id="RouteAssignmentCreateModal">
        <abp-modal-header title="@L["NewRouteAssignment"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="RouteAssignment.EffectiveDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="RouteAssignment.EndDate" value="" type="date"/>

                                <abp-select asp-for="RouteAssignment.RouteId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["Route"].Value"/>            <abp-select asp-for="RouteAssignment.EmployeeId" asp-items="Model.EmployeeProfileLookupListRequired" label="@L["Employee"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>