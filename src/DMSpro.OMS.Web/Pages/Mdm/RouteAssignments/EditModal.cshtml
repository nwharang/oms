@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.RouteAssignments
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.RouteAssignments;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/RouteAssignments/EditModal" autocomplete="off">
    <abp-modal id="RouteAssignmentEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="RouteAssignment.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="RouteAssignment.EffectiveDate" value="@(Model.RouteAssignment.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="RouteAssignment.EndDate" value="@(Model.RouteAssignment.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="RouteAssignment.RouteId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["Route"].Value"/>            <abp-select asp-for="RouteAssignment.EmployeeId" asp-items="Model.EmployeeProfileLookupListRequired" label="@L["Employee"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>