@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.CustomerAssignments
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.CustomerAssignments;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerAssignments/EditModal" autocomplete="off">
    <abp-modal id="CustomerAssignmentEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="CustomerAssignment.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="CustomerAssignment.EffectiveDate" value="@(Model.CustomerAssignment.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="CustomerAssignment.EndDate" value="@(Model.CustomerAssignment.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="CustomerAssignment.CompanyId" asp-items="Model.CompanyLookupListRequired" label="@L["Company"].Value"/>            <abp-select asp-for="CustomerAssignment.CustomerId" asp-items="Model.CustomerLookupListRequired" label="@L["Customer"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>