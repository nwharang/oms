@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.EmployeeAttachments
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.EmployeeAttachments;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/EmployeeAttachments/EditModal" autocomplete="off">
    <abp-modal id="EmployeeAttachmentEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="EmployeeAttachment.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="EmployeeAttachment.url" />

            <abp-input asp-for="EmployeeAttachment.Description" />

            <abp-input asp-for="EmployeeAttachment.Active" />

                                <abp-select asp-for="EmployeeAttachment.EmployeeProfileId" asp-items="Model.EmployeeProfileLookupListRequired" label="@L["EmployeeProfile"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>