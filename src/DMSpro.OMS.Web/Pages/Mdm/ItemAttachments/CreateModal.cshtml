@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.ItemAttachments
@using DMSpro.OMS.MdmService.ItemAttachments;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/ItemAttachments/CreateModal" autocomplete="off">
    <abp-modal id="ItemAttachmentCreateModal">
        <abp-modal-header title="@L["NewItemAttachment"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="ItemAttachment.Description" />

            <abp-input asp-for="ItemAttachment.Active" />

            <abp-input asp-for="ItemAttachment.URL" />

                                <abp-select asp-for="ItemAttachment.ItemId" asp-items="Model.ItemMasterLookupListRequired" label="@L["Item"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
