@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.CustomerGroupByGeos
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.CustomerGroupByGeos;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerGroupByGeos/EditModal" autocomplete="off">
    <abp-modal id="CustomerGroupByGeoEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="CustomerGroupByGeo.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="CustomerGroupByGeo.Active" />

            <abp-input asp-for="CustomerGroupByGeo.EffectiveDate" value="@(Model.CustomerGroupByGeo.EffectiveDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="CustomerGroupByGeo.CustomerGroupId" asp-items="Model.CustomerGroupLookupListRequired" label="@L["CustomerGroup"].Value"/>            <abp-select asp-for="CustomerGroupByGeo.GeoMasterId" asp-items="Model.GeoMasterLookupListRequired" label="@L["GeoMaster"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>