@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.Currencies
@using DMSpro.OMS.MdmService.Currencies;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Currencies/CreateModal" autocomplete="off">
    <abp-modal id="CurrencyCreateModal">
        <abp-modal-header title="@L["NewCurrency"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="Currency.Code" />

            <abp-input asp-for="Currency.Name" />

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>