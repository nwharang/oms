<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-select asp-for="TitleFilter" label="@L["Title"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="FirstNameFilter" label="@L["FirstName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="LastNameFilter" label="@L["LastName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="GenderFilter" label="@L["Gender"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DateOfBirthFilterMin" label="@L["MinDateOfBirth"].Value" type="date"/>
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DateOfBirthFilterMax" label="@L["MaxDateOfBirth"].Value" type="date"/>
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="PhoneFilter" label="@L["Phone"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="EmailFilter" label="@L["Email"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="AddressFilter" label="@L["Address"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="IdentityNumberFilter" label="@L["IdentityNumber"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="BankNameFilter" label="@L["BankName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="BankAccNameFilter" label="@L["BankAccName"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="BankAccNumberFilter" label="@L["BankAccNumber"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="CustomerIdFilter" label="@L["Customer"].Value" />
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="CustomerContactsTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["Title"]</th>
					<th>@L["FirstName"]</th>
					<th>@L["LastName"]</th>
					<th>@L["Gender"]</th>
					<th>@L["DateOfBirth"]</th>
					<th>@L["Phone"]</th>
					<th>@L["Email"]</th>
					<th>@L["Address"]</th>
					<th>@L["IdentityNumber"]</th>
					<th>@L["BankName"]</th>
					<th>@L["BankAccName"]</th>
					<th>@L["BankAccNumber"]</th>
					<th>@L["Customer"]</th>
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>