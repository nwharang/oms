@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.SalesOrgEmpAssignments
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.SalesOrgEmpAssignments;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/SalesOrgEmpAssignments/EditModal" autocomplete="off">
    <abp-modal id="SalesOrgEmpAssignmentEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="SalesOrgEmpAssignment.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="SalesOrgEmpAssignment.IsBase" />

            <abp-input asp-for="SalesOrgEmpAssignment.EffectiveDate" value="@(Model.SalesOrgEmpAssignment.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="SalesOrgEmpAssignment.EndDate" value="@(Model.SalesOrgEmpAssignment.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="SalesOrgEmpAssignment.SalesOrgHierarchyId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["SalesOrgHierarchy"].Value"/>            <abp-select asp-for="SalesOrgEmpAssignment.EmployeeProfileId" asp-items="Model.EmployeeProfileLookupListRequired" label="@L["EmployeeProfile"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>