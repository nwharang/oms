@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["UOMGroupDetails"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.UOMGroupDetails;
}

@section scripts
{
    <abp-script src="/Pages/Mdm/UOMGroupDetails/index.js" />
}

