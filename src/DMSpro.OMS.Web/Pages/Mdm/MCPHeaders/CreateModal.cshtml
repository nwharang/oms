@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.MCPHeaders
@using DMSpro.OMS.MdmService.MCPHeaders;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/MCPHeaders/CreateModal" autocomplete="off">
    <abp-modal id="MCPHeaderCreateModal">
        <abp-modal-header title="@L["NewMCPHeader"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="MCPHeader.Code" />

            <abp-input asp-for="MCPHeader.Name" />

            <abp-input asp-for="MCPHeader.EffectiveDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date"/>

            <abp-input asp-for="MCPHeader.EndDate" value="" type="date"/>

                                <abp-select asp-for="MCPHeader.RouteId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["Route"].Value"/>            <abp-select asp-for="MCPHeader.CompanyId" asp-items="Model.CompanyLookupListRequired" label="@L["Company"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>