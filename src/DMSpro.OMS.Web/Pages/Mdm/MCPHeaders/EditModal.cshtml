@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using DMSpro.OMS.MdmService.Web.Pages.MCPHeaders
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.MCPHeaders;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/MCPHeaders/EditModal" autocomplete="off">
    <abp-modal id="MCPHeaderEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="MCPHeader.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="MCPHeader.Code" />

            <abp-input asp-for="MCPHeader.Name" />

            <abp-input asp-for="MCPHeader.EffectiveDate" value="@(Model.MCPHeader.EffectiveDate.ToString("yyyy-MM-dd"))" type="date"/>

            <abp-input asp-for="MCPHeader.EndDate" value="@(Model.MCPHeader.EndDate?.ToString("yyyy-MM-dd"))" type="date"/>

                                <abp-select asp-for="MCPHeader.RouteId" asp-items="Model.SalesOrgHierarchyLookupListRequired" label="@L["Route"].Value"/>            <abp-select asp-for="MCPHeader.CompanyId" asp-items="Model.CompanyLookupListRequired" label="@L["Company"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>