@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization;
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using DMSpro.OMS.Localization
@using DMSpro.OMS.MdmService.Web.Menus
@inject IHtmlLocalizer<OMSResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Page.Title.Routes"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.Routes;
}

@section styles {
    <abp-style src="/Pages/Mdm/Routes/index.css" />
}
@section scripts {
    <script src="/js/devextreme/exceljs.min.js"></script>
    <script src="/js/devextreme/filesaver.min.js"></script>
    <abp-script src="/Pages/Mdm/Routes/index.js" />

}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0);">@L["Menu:MdmService:MdmService"].Value</a></li>
        <li class="breadcrumb-item">@L["Menu:MdmService:RouteAndMCP"].Value</li>
        <li class="breadcrumb-item active">@L["Page.Title.Routes"].Value</li>
    </ol>
}

<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fa fa-file-alt"></i>
            </h2>
        </div>
        <div class="panel-container show">
            <div class="panel-content jqvmap-bg-ocean p-0 wrapper-routes"  >
                <abp-card>
                    <abp-card-body > 
                        <div id="popupVenderInformation"></div>
                        <div class="dx-viewport">
                            <div id="gridRoutes"></div>
                        </div>
                    </abp-card-body>
                </abp-card>
            </div>
        </div>
    </div>
</div>

