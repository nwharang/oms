<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-select asp-for="CheckInFilter" label="@L["CheckIn"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="CheckOutFilter" label="@L["CheckOut"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="GPSLockFilter" label="@L["GPSLock"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="OutRouteFilter" label="@L["OutRoute"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="RouteTypeIdFilter" label="@L["RouteType"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="ItemGroupIdFilter" label="@L["ItemGroup"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="SalesOrgHierarchyIdFilter" label="@L["SalesOrgHierarchy"].Value" />
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="RoutesTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["CheckIn"]</th>
					<th>@L["CheckOut"]</th>
					<th>@L["GPSLock"]</th>
					<th>@L["OutRoute"]</th>
					<th>@L["RouteType"]</th>
					<th>@L["ItemGroup"]</th>
					<th>@L["SalesOrgHierarchy"]</th>
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>