@using DMSpro.OMS.MdmService.Web.Pages.Routes
@using DMSpro.OMS.MdmService.Web.Menus
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@inject IHtmlLocalizer<MdmServiceResource> L
@inject IAuthorizationService Authorization
@model IndexModel
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Routes"].Value;
    PageLayout.Content.MenuItemName = MdmServiceMenus.Routes;
}

@section scripts
{
    <abp-script src="/Pages/Mdm/Routes/index.js" />
}

