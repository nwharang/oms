<abp-card>
    <abp-card-body>
		<abp-row class="mb-3">
            <abp-column size-md="_12">
                <form id="SearchForm" autocomplete="off">
                    <div class="input-group">
                        <input class="form-control page-search-filter-text" id="FilterText" placeholder="@L["Search"]"/>
                        <abp-button button-type="Primary" type="submit" icon="search"/>
                    </div>
                </form>
            </abp-column>
            <abp-column size-md="_12" class="mt-3">
                <a href="javascript:;" id="AdvancedFilterSectionToggler" class="text-decoration-none">@L["SeeAdvancedFilters"]</a>
            </abp-column>
        </abp-row>

        <abp-row id="AdvancedFilterSection" style="display: none;">
            <abp-column size="_3">
                <abp-input asp-for="DateVisitFilterMin" label="@L["MinDateVisit"].Value" type="date"/>
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DateVisitFilterMax" label="@L["MaxDateVisit"].Value" type="date"/>
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DistanceFilterMin" label="@L["MinDistance"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="DistanceFilterMax" label="@L["MaxDistance"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="VisitOrderFilterMin" label="@L["MinVisitOrder"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="VisitOrderFilterMax" label="@L["MaxVisitOrder"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="DayOfWeekFilter" label="@L["DayOfWeek"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="WeekFilterMin" label="@L["MinWeek"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="WeekFilterMax" label="@L["MaxWeek"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="MonthFilterMin" label="@L["MinMonth"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="MonthFilterMax" label="@L["MaxMonth"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="YearFilterMin" label="@L["MinYear"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-input asp-for="YearFilterMax" label="@L["MaxYear"].Value" />
            </abp-column>
            <abp-column size="_3">
                <abp-select asp-for="MCPDetailIdFilter" label="@L["MCPDetail"].Value" />
            </abp-column>
        </abp-row>

        <abp-table striped-rows="true" id="VisitPlansTable">
            <thead>
				<tr>
					<th>@L["Actions"]</th>
					<th>@L["DateVisit"]</th>
					<th>@L["Distance"]</th>
					<th>@L["VisitOrder"]</th>
					<th>@L["DayOfWeek"]</th>
					<th>@L["Week"]</th>
					<th>@L["Month"]</th>
					<th>@L["Year"]</th>
					<th>@L["MCPDetail"]</th>
				</tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>