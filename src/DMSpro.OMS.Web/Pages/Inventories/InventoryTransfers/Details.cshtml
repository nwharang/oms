@page
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = "Inventories";
    PageLayout.Content.MenuItemName = "Inventories.InventoryTransfers";
}
@section styles {
    <abp-style src="/Pages/Inventories/InventoryTransfers/Details.css" />
}

@section scripts {
    <script src="/js/devextreme/exceljs.min.js"></script>
    <script src="/js/devextreme/filesaver.min.js"></script>
    <abp-script src="/Pages/Inventories/InventoryTransfers/Details.js" />
}

@section breadcrumb {
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item"><a href="/Inventories">Inventory</a></li>
        <li class="breadcrumb-item"><a href="/Inventories/InventoryTransfers">Inventory Transfers</a></li>
        <li class="breadcrumb-item active">Details</li> 
    </ol>
}
 
<div class="col-lg-12">
    <div id="panel-1" class="panel">
        <div class="panel-hdr">
            <h2 class="ui-sortable-handle">
                <i class="subheader-icon fa fa-road"></i> Details
            </h2>
        </div>
           <div class="panel-container show" style="padding-top:10px">
            <div class="panel-content jqvmap-bg-ocean p-0" style="">
                 <div style="padding-left:12px" class="buttons-header-grid">
                    <div class="btn-group">
                        <button id="btnActions" type="button" class="btn btn-light btn-sm dropdown-toggle hvr-icon-pop"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-gear hvr-icon"></i>
                            <span class="">Action</span>
                        </button>
                        <div class="dropdown-menu fadeindown">
                            <button class="dropdown-item" type="button">Save</button>
                        @*    <button class="dropdown-item" type="button">Confirm</button>*@
                            <button class="dropdown-item" type="button">Cancel</button>
                        </div>
                    </div>
                </div>
                <div class="dx-viewport">
                    <div class="py-3" id="resizable">
                        <div id="form"></div>
                    </div>
                    <div class=" py-2">
                        <div id="gridInventoryTransfersDetails">
                        </div>
                    </div>
                </div> 
            </div>
        </div> 
    </div>
</div>

